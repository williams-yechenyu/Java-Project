public class ExprimentOne {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int i;
		int[] a;
		a = new int[10];
		for(i = 0; i<a.length; i++)
		{
			System.out.print("a["+i+"]="+a[i]+" ");
		}
		System.out.println(" ");
		//逆序给数组a赋值，并且输出元素的内容
		for(i=a.length-1; i>-1; i--)
		{
			a[i] = i;
			System.out.print("a["+i+"]="+a[i]+" ");
		}
	}

}
